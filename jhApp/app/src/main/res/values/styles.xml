<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="JustHealthTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">
            @style/defaultActionBar
        </item>
    </style>

    <style name="defaultActionBar" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:titleTextStyle">
            @style/defaultActionBarText
        </item>
        <item name="android:background">
            @color/action_bar
        </item>
        <item name="android:actionOverflowButtonStyle">
            @color/white
        </item>
    </style>

    <style name="defaultActionBarText" parent="@style/android:TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textSize">
            20sp
        </item>
        <item name="android:textColor">
            @color/white
        </item>
    </style>

    <style name="ActionBarButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="ActionBarButtonWhite" parent="@style/ActionBarButton">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ActionBarButtonOffWhite" parent="@style/ActionBarButton">
        <item name="android:textColor">@color/off_white</item>
    </style>

    <!-- Layout Styles -->
    <style name="defaultLinear">
        <item name="android:paddingLeft">15sp</item>
        <item name="android:paddingRight">15sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="defaultLinearForm">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginRight">20sp</item>
        <item name="android:layout_marginLeft">20sp</item>
        <item name="android:background">@drawable/form_border</item>
        <item name="android:layout_marginTop">65sp</item>
    </style>

    <style name="defaultLinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginRight">20sp</item>
        <item name="android:layout_marginLeft">20sp</item>
        <item name="android:background">@drawable/form_border</item>
        <item name="android:layout_marginTop">0sp</item>
        <item name="android:paddingTop">50sp</item>
    </style>

    <style name="inputFieldsStyle">
        <item name="android:layout_marginTop">20sp</item>
    </style>

    <style name="defaultConfirmButton">
        <item name="android:layout_marginLeft">20sp</item>
        <item name="android:layout_marginRight">20sp</item>
        <item name="android:layout_marginBottom">30sp</item>
        <item name="android:background">@color/primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Button Styles -->
    <style name="primaryButton" parent="@android:style/Widget.Holo.Button">
        <item name="android:background">@color/primary</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="successButton" parent="@android:style/Widget.Holo.Button">
        <item name="android:background">@color/success</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="dangerButton" parent="@android:style/Widget.Holo.Button">
        <item name="android:background">@color/danger</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="badgeButton" parent="@style/primaryButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginRight">10sp</item>
        <item name="android:layout_marginLeft">10sp</item>
        <item name="android:layout_marginTop">10sp</item>
        <item name="android:layout_marginBottom">10sp</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:paddingLeft">25sp</item>
        <item name="android:paddingRight">25sp</item>
    </style>

    <!-- Form Styles -->
    <style name="inputWithIcon" parent="@android:style/Widget.Holo.EditText">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">15sp</item>
        <item name="android:layout_marginTop">20sp</item>
    </style>
    <style name="spinnerWithIcon" parent="@android:style/Widget.Holo.Spinner">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">15sp</item>
        <item name="android:layout_marginTop">20sp</item>
    </style>
    <style name="inputIcon">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginTop">25sp</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:shadowColor">#22000000</item>
        <item name="android:shadowDx">3</item>
        <item name="android:shadowDy">3</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="homePageButton">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0sp</item>
        <item name="android:gravity">center</item>
        <item name="android:shadowColor">#22000000</item>
        <item name="android:shadowDx">3</item>
        <item name="android:shadowDy">3</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:textSize">100sp</item>
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="homePageLabel">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/primary</item>
    </style>

    <!-- Text sizes -->
    <dimen name="text_size_small">14.0sp</dimen>
    <dimen name="text_size_medium">16.0sp</dimen>
    <dimen name="text_size_large">25sp</dimen>

    <!-- ActionBar color strip -->
    <dimen name="colorstrip">5dp</dimen>

    <style name="largeButtonLabel">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- FAQs -->
    <style name="question">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:layout_marginTop">15sp</item>
        <item name="android:layout_marginBottom">5sp</item>
    </style>

    <style name="answer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_marginTop">5sp</item>
    </style>
</resources>