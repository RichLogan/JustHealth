<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/createAppointmentScroll">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white">

        <LinearLayout
            android:id="@+id/createAppointmentView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/defaultLinearForm"
            android:orientation="vertical">

            <EditText android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Appointment Title"
                android:textSize="20dip"
                android:textColor="@color/header"
                android:layout_marginBottom="5dip"
                android:id="@+id/name"
                style="@style/inputFieldsStyle"/>

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/type"
                android:layout_below="@+id/name"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                style="@style/inputFieldsStyle" />

            <EditText android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Building Name Number"
                android:layout_below="@+id/type"
                android:textSize="20dip"
                android:textColor="@color/header"
                android:layout_marginBottom="5dip"
                android:id="@+id/buildingNameNumber"
                style="@style/inputFieldsStyle" />

            <EditText android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Postcode"
                android:layout_below="@+id/buildingNameNumber"
                android:textSize="20dip"
                android:textColor="@color/header"
                android:layout_marginBottom="5dip"
                android:id="@+id/postcode"
                style="@style/inputFieldsStyle" />

            <EditText android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Start Date"
                android:inputType="date"
                android:layout_below="@+id/postcode"
                android:textSize="20dip"
                android:textColor="@color/header"
                android:layout_marginBottom="5dip"
                android:id="@+id/startDate"
                style="@style/inputFieldsStyle" />

            <EditText android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Start Time"
                android:inputType="time"
                android:layout_below="@+id/startDate"
                android:textSize="20dip"
                android:textColor="@color/header"
                android:layout_marginBottom="5dip"
                android:id="@+id/startTime"
                style="@style/inputFieldsStyle" />

            <EditText android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="End Date"
                android:inputType="date"
                android:layout_below="@+id/startTime"
                android:textSize="20dip"
                android:textColor="@color/header"
                android:layout_marginBottom="5dip"
                android:id="@+id/endDate"
                style="@style/inputFieldsStyle" />

            <EditText android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="End Time"
                android:inputType="time"
                android:layout_below="@+id/endDate"
                android:textSize="20dip"
                android:textColor="@color/header"
                android:layout_marginBottom="5dip"
                android:id="@+id/endTime"
                style="@style/inputFieldsStyle" />

            <EditText android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Details"
                android:layout_below="@+id/endTime"
                android:textSize="20dip"
                android:textColor="@color/header"
                android:layout_marginBottom="5dip"
                android:id="@+id/details"
                style="@style/inputFieldsStyle" />

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tick to make the appointment private"
                android:id="@+id/appPrivate"
                android:checked="false"
                style="@style/inputFieldsStyle" />

        </LinearLayout>

            <Button
                android:text="Create"
                android:id="@+id/buttonAppointment"
                android:layout_marginTop="35sp"
                style="@style/defaultConfirmButton" />
        </LinearLayout>

    </ScrollView>



</LinearLayout>