<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".CreateSelfAppointment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <ScrollView
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/off_white">

            <LinearLayout
                android:id="@+id/createAppointmentView"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                style="@style/defaultLinearForm">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/appointmentTitle"
                        android:textColor="@color/header"
                        android:layout_gravity="center_horizontal"
                        android:ems="10"
                        style="@style/inputWithIcon"/>
                    <IconTextView
                        android:text="{fa-tag}"
                        style="@style/inputIcon" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/type"
                        android:layout_gravity="center_horizontal"
                        android:ems="10"
                        style="@style/inputWithIcon"></TextView>
                    <IconTextView
                        android:layout_marginTop="40sp"
                        android:text="{fa-spinner}"
                        style="@style/inputIcon" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/header"
                        android:id="@+id/buildingNameNumber"
                        style="@style/inputWithIcon" />
                    <IconTextView
                        android:text="{fa-building}"
                        style="@style/inputIcon" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/header"
                        android:id="@+id/postcode"
                        style="@style/inputWithIcon" />
                    <IconTextView
                        android:text="{fa-location-arrow}"
                        style="@style/inputIcon" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/header"
                        android:id="@+id/startDate"
                        style="@style/inputWithIcon" />
                    <IconTextView
                        android:text="{fa-calendar}"
                        style="@style/inputIcon" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/header"
                        android:id="@+id/startTime"
                        style="@style/inputWithIcon" />
                    <IconTextView
                        android:text="{fa-clock-o}"
                        style="@style/inputIcon" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/header"
                        android:id="@+id/endDate"
                        style="@style/inputWithIcon" />
                    <IconTextView
                        android:text="{fa-calendar}"
                        style="@style/inputIcon" />
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/header"
                        android:id="@+id/endTime"
                        style="@style/inputWithIcon" />
                    <IconTextView
                        android:text="{fa-clock-o}"
                        style="@style/inputIcon" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/details"
                        style="@style/inputWithIcon"
                        android:textColor="@color/header" />
                    <IconTextView
                        android:text="{fa-ellipsis-h}"
                        style="@style/inputIcon" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <CheckBox
                        android:text="Private?"
                        android:id="@+id/appPrivate"
                        android:checked="false"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_marginTop="20sp"
                        android:layout_marginLeft="10sp"/>
                    <IconTextView
                        android:text="{fa-lock}"
                        style="@style/inputIcon" />
                </RelativeLayout>

            </LinearLayout>
            <Button
                android:text="Update"
                android:id="@+id/buttonAppointment"
                android:layout_marginTop="35sp"
                style="@style/primaryButton" />

        </LinearLayout>

    </ScrollView>



</RelativeLayout>