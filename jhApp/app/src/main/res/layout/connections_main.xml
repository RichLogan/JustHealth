<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:orientation="horizontal"
        android:layout_weight="1" >

        <RelativeLayout
            android:id="@+id/incomingButton"
            style="@style/badgeButton">
            <TextView
                android:text="Incoming"
                style="@style/largeButtonLabel"/>
            <TextView
                android:id="@+id/incomingBadge"
                android:layout_alignParentRight="true"
                android:background="@drawable/circle_textview"
                android:drawableBottom="#777"
                style="@style/largeButtonLabel"
                android:gravity="center"
                android:textColor="@color/primary"
                android:layout_width="50sp"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:orientation="horizontal"
        android:layout_weight="1" >

        <RelativeLayout
            android:id="@+id/outgoingButton"
            style="@style/badgeButton">
            <TextView
                android:text="Outgoing"
                style="@style/largeButtonLabel"/>
            <TextView
                android:id="@+id/outgoingBadge"
                android:layout_alignParentRight="true"
                android:background="@drawable/circle_textview"
                android:drawableBottom="#777"
                style="@style/largeButtonLabel"
                android:gravity="center"
                android:textColor="@color/primary"
                android:layout_width="50sp"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:orientation="horizontal"
        android:layout_weight="1" >

        <RelativeLayout
            android:id="@+id/completedButton"
            style="@style/badgeButton"
            android:background="@color/success">
            <TextView
                android:text="Completed"
                style="@style/largeButtonLabel"/>
            <TextView
                android:id="@+id/completedBadge"
                android:layout_alignParentRight="true"
                android:background="@drawable/circle_textview"
                android:drawableBottom="#777"
                style="@style/largeButtonLabel"
                android:gravity="center"
                android:textColor="@color/success"
                android:layout_width="50sp"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>